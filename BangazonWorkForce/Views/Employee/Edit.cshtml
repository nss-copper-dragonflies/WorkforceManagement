@model BangazonWorkForce.Models.ViewModel.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EmployeeEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.IsSupervisor" class="control-label"></label>
                <input asp-for="Employee.IsSupervisor" class="form-control" />
                <span asp-validation-for="Employee.IsSupervisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DepartmentId" class="control-label"></label>
                <select asp-for="Employee.DepartmentId" asp-items="@Model.DepartmentOptions"></select>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            @foreach (TrainingProgram trainingProgram in Model.Employee.TrainingProgramList)
            {
                <div class="form-group">
                    <label asp-for="trainingProgram.Name" class="control-label"></label>
                    <select asp-for="trainingProgram.Name" asp-items="@Model.TrainingProgramOptions" class="form-control"></select>
                    <span asp-validation-for="trainingProgram.Name" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label class="control-label">Want To add more programs?</label>    
                <select asp-for="trainingProgram.Name" asp-items="@Model.TrainingProgramOptions" class="form-control"></select>
                <span asp-validation-for="trainingProgram.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

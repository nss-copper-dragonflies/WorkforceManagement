@model BangazonWorkForce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            DepartmentName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            Upcoming or Current TrainingPrograms
        </dt>
        @if (Model.CurrentTrainingPrograms.Count > 0)
        {
            @foreach (var item in Model.CurrentTrainingPrograms)
            {
                if (item.EndDate >= DateTime.Now)
                {
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Name)
                    </dd>
                    <dd class="col-sm-10">
                        StartDate
                        @Html.DisplayFor(model => item.StartDate)
                    </dd>
                    <dd class="col-sm-10">
                        EndDate
                        @Html.DisplayFor(model => item.EndDate)
                    </dd>
                }
            }
        }

        <dt class="col-sm-2">
            Completed TrainingPrograms
        </dt>

        @if (Model.CurrentTrainingPrograms.Count > 0)
        {
            @foreach (var item in Model.CurrentTrainingPrograms)
            {
                if (item.EndDate <= DateTime.Now)
                {
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => item.Name)
                    </dd>
                    <dd class="col-sm-10">
                        StartDate
                        @Html.DisplayFor(model => item.StartDate)
                    </dd>
                    <dd class="col-sm-10">
                        EndDate
                        @Html.DisplayFor(model => item.EndDate)
                    </dd>
                }
            }
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Id=Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

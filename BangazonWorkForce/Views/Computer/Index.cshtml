@model IEnumerable<BangazonWorkForce.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Computer" asp-action="Index">
    <div class="navbar-left" style="margin-top:8px;">
        @using (Html.BeginForm("Index", "Search", FormMethod.Get))
        {
            <ul class="nav navbar-nav">
                <li>@Html.TextBox("q", ViewBag.CurrentFilter as string)<input type="submit" value="Search" /></li> 
            </ul>
        }
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeeObj.FullName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.ActionLink(item.Make, "Details", new { id = item.id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.employeeObj.FullName)
            </td>
        </tr>
}

    </tbody>
</table>
<a asp-action="Index">Clear Search</a>
